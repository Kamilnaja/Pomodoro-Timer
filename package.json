{
  "name": "pomik",
  "version": "0.0.2",
  "engines": {
    "node": "12.18.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "md5": "^2.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "postgresql": "0.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/md5": "^2.2.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.20",
    "@types/pg": "^7.14.7",
    "@types/sqlite3": "^3.1.6",
    "@types/uuid": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "main": "./dist/src/index.js",
  "files": [
    "dist/src/index.js"
  ],
  "types": "../types.d.ts",
  "scripts": {
    "start": "node dist/server/src/index.js",
    "postinstall": "cd server && tsc",
    "heroku-postbuild": "tsc & cd web/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "watch-ts": "cd server && tsc -w",
    "watch-node": "nodemon dist/server/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "git add . && git commit -m Heroku && git push heroku master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "tslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
